<div class="containter">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<h1 class="text-center">Login</h1>
			<hr>
			<%= form_tag '/login' do %>
				<div class="form-group">
					Email: <%= text_field_tag :email, nil,class: "form-control" %>
				</div>
				<div class="form-group">
					Password: <%= password_field_tag :password, nil,class: "form-control" %>
				</div>
				<div class="form-group">
					<%= submit_tag "Submit", class: "btn btn-default" %>
				</div>
			<% end %>
			<p class="text-center form-question">Don't have an account? <%= link_to "Click Here", signup_path, class: "link" %> to sign up.</p>
		</div>
	</div>
</div>