<div class="containter">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2 user_signup_form">
			<h1 class="text-center">Login</h1>
			<%= form_tag '/login' do %>
				<div class="form-group">
					<%=  label_tag :email %>
					<%= text_field_tag :email, nil,class: "form-control" %>
				</div>
				<div class="form-group">
					<%=  label_tag :password %>
					<%= password_field_tag :password, nil,class: "form-control" %>
				</div>
				<div class="form-group">
					<%= submit_tag "Submit", class: "btn btn-success" %>
				</div>
			<% end %>
			<p class="text-center">Not a member yet? <%= link_to "Click Here", signup_path %> to signup.</p>
		</div>
	</div>
</div>